{
  "$schema": "https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json",
  "appId": "com.auradesk.app",
  "productName": "AuraDesk",
  "copyright": "Copyright Â© 2026 AuraDesk",
  "directories": {
    "output": "release",
    "buildResources": "build"
  },
  "files": [
    "dist/**/*",
    "electron/**/*",
    "package.json"
  ],
  "asarUnpack": [
    "dist/**/*"
  ],
  "extraMetadata": {
    "main": "electron/main.cjs"
  },
  "publish": {
    "provider": "github",
    "owner": "cyb3rh3ad",
    "repo": "auradesk-4cb3f0f7",
    "releaseType": "release"
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "icon": "public/icon.png",
    "artifactName": "${productName}-Setup-${version}.${ext}"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": false,
    "installerIcon": "public/icon.png",
    "uninstallerIcon": "public/icon.png",
    "installerHeaderIcon": "public/icon.png",
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "AuraDesk"
  },
  "mac": {
    "target": ["dmg"],
    "icon": "public/favicon.ico",
    "category": "public.app-category.productivity",
    "artifactName": "${productName}-${version}.${ext}"
  },
  "linux": {
    "target": ["AppImage", "deb"],
    "icon": "public/favicon.ico",
    "category": "Office",
    "artifactName": "${productName}-${version}.${ext}"
  }
}
