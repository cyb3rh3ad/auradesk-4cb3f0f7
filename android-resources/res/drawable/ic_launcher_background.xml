<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Deep cosmic dark base -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#0c0a14"/>
        </shape>
    </item>
    
    <!-- Deep indigo radial for depth -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="54dp"
                android:centerX="50%"
                android:centerY="50%"
                android:startColor="#1e1b4b"
                android:centerColor="#12101c"
                android:endColor="#00000000" />
        </shape>
    </item>
    
    <!-- Purple aura glow -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="42dp"
                android:centerX="45%"
                android:centerY="45%"
                android:startColor="#20a855f7"
                android:endColor="#00000000" />
        </shape>
    </item>

    <!-- Cyan accent glow -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="36dp"
                android:centerX="55%"
                android:centerY="55%"
                android:startColor="#1406b6d4"
                android:endColor="#00000000" />
        </shape>
    </item>
</layer-list>
