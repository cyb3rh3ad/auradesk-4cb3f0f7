<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Deep cosmic dark premium base -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="160"
                android:startColor="#0c0a14"
                android:centerColor="#100e1a"
                android:endColor="#0c0a14" />
        </shape>
    </item>
    
    <!-- Large ambient indigo nebula -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="400dp"
                android:centerX="0.5"
                android:centerY="0.4"
                android:startColor="#1e1b4b"
                android:centerColor="#110f1e"
                android:endColor="#00000000" />
        </shape>
    </item>
    
    <!-- Primary purple aura — brand accent -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="250dp"
                android:centerX="0.38"
                android:centerY="0.38"
                android:startColor="#30a855f7"
                android:centerColor="#158b5cf6"
                android:endColor="#00000000" />
        </shape>
    </item>
    
    <!-- Cyan/teal accent aura -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="200dp"
                android:centerX="0.62"
                android:centerY="0.58"
                android:startColor="#2006b6d4"
                android:centerColor="#1022d3ee"
                android:endColor="#00000000" />
        </shape>
    </item>
    
    <!-- Pink cosmic accent — subtle warmth -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="160dp"
                android:centerX="0.7"
                android:centerY="0.35"
                android:startColor="#10ec4899"
                android:endColor="#00000000" />
        </shape>
    </item>
    
    <!-- Top highlight bloom -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="220dp"
                android:centerX="0.5"
                android:centerY="0.28"
                android:startColor="#0ac084fc"
                android:endColor="#00000000" />
        </shape>
    </item>
</layer-list>
